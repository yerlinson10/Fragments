{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fragments.app/schemas/story.json",
  "title": "Fragments Story Events Schema",
  "description": "Schema for validating story events file",
  "type": "object",
  "required": ["events"],
  "properties": {
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "day", "text", "choices"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "minLength": 1,
            "maxLength": 50,
            "description": "Unique event identifier"
          },
          "type": {
            "type": "string",
            "enum": ["mandatory", "optional", "random", "forced"],
            "description": "Event type determines when it appears"
          },
          "day": {
            "type": "integer",
            "minimum": 1,
            "description": "Which day this event occurs"
          },
          "text": {
            "type": "string",
            "minLength": 1,
            "maxLength": 5000,
            "description": "Event situation/description text"
          },
          "choices": {
            "type": "array",
            "minItems": 1,
            "maxItems": 10,
            "items": {
              "type": "object",
              "required": ["text"],
              "properties": {
                "text": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 500,
                  "description": "Choice text displayed to player"
                },
                "effects": {
                  "type": "object",
                  "properties": {
                    "stats": {
                      "type": "object",
                      "description": "Stat changes (delta values)"
                    },
                    "flags": {
                      "type": "object",
                      "description": "Flag changes"
                    },
                    "characters": {
                      "type": "object",
                      "description": "Character relationship changes"
                    },
                    "inventory": {
                      "type": "object",
                      "properties": {
                        "money": {
                          "type": "number"
                        },
                        "items": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "unlock_events": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "lock_events": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "trigger_next_day": {
                      "type": "boolean"
                    },
                    "unlocks": {
                      "type": "object",
                      "properties": {
                        "achievement": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "next_event": {
                  "type": "string",
                  "description": "Force next event to load"
                }
              }
            }
          },
          "conditions": {
            "type": "object",
            "properties": {
              "stats": {
                "type": "object",
                "description": "Required stat conditions (min/max suffixes)"
              },
              "flags": {
                "type": "object",
                "description": "Required flag values"
              },
              "characters": {
                "type": "object",
                "description": "Character relationship requirements"
              },
              "inventory": {
                "type": "object",
                "properties": {
                  "money_min": {
                    "type": "number"
                  },
                  "money_max": {
                    "type": "number"
                  },
                  "has_items": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              },
              "day_min": {
                "type": "integer",
                "minimum": 1
              },
              "day_max": {
                "type": "integer",
                "minimum": 1
              },
              "completed_events": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "previous_choices": {
                "type": "object",
                "description": "Requires specific choices from previous events"
              }
            }
          },
          "can_repeat": {
            "type": "boolean",
            "description": "Can this event appear multiple times?"
          },
          "probability": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "For random events (0-1)"
          },
          "forced_by_flag": {
            "type": "string",
            "description": "Flag that triggers this forced event"
          }
        }
      }
    }
  }
}
