{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fragments.app/schemas/endings.json",
  "title": "Fragments Story Endings Schema",
  "description": "Schema for validating story endings file",
  "type": "object",
  "required": ["endings", "default_ending"],
  "properties": {
    "endings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "priority", "content"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "minLength": 1,
            "maxLength": 50,
            "description": "Unique ending identifier"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Ending title"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 999,
            "description": "Lower priority = checked first (more specific)"
          },
          "conditions": {
            "type": "object",
            "properties": {
              "stats": {
                "type": "object",
                "description": "Required stat conditions"
              },
              "flags": {
                "type": "object",
                "description": "Required flag values"
              },
              "characters": {
                "type": "object",
                "description": "Character relationship requirements"
              },
              "inventory": {
                "type": "object"
              },
              "completed_events": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "achievements": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "content": {
            "type": "object",
            "required": ["message"],
            "properties": {
              "message": {
                "type": "string",
                "minLength": 1,
                "maxLength": 5000,
                "description": "Ending narrative text"
              },
              "image": {
                "type": "string",
                "description": "Optional image URL/path"
              },
              "unlocks": {
                "type": "object",
                "properties": {
                  "achievement": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "default_ending": {
      "type": "object",
      "required": ["title", "content"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Default ending title"
        },
        "content": {
          "type": "object",
          "required": ["message"],
          "properties": {
            "message": {
              "type": "string",
              "minLength": 1,
              "maxLength": 5000,
              "description": "Default ending text"
            }
          }
        }
      }
    }
  }
}
